import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        System.out.print("Enter an integer: ");
        int n = sc.nextInt();

        int count = 0;
        int number = Math.abs(n); 

        if (number == 0) {
            count = 1;
        }

        while (number > 0) {
            number = number / 10; 
            count++;             
        }

        System.out.println("Number of digits: " + count);
    }
}
